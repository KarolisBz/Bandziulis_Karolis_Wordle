<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Wordle_Karolis_G00417529.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Wordle_Karolis_G00417529">

    <Shell.FlyoutHeader>
        <Label Text="header"/>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Dashboard" FlyoutDisplayOptions="AsMultipleItems" FlyoutItemIsVisible="False">
        <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

        <ShellContent Icon="icon.png"
          Title="Wordle"
          ContentTemplate="{DataTemplate local:gamePage}"
          Route="gamePage"/>

        <ShellContent Icon="icon.png"
          Title="Settings"
          ContentTemplate="{DataTemplate local:SettingsPage}"
          Route="SettingsPage"/>
    </FlyoutItem>

</Shell>
